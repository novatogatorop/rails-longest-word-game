<div class="container">
<h1>New Game!</h1>
<div class="letter">
<% @letters.each do |letter| %>
 <p class="letter-box"> <%= letter %> </p>
<% end %>
</div>
<h3>What is the longest word you can find?</h3>
<form action="/score" method="POST" id="form">
   <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <input type="text" name="input" id="box">
    <input type="submit" value="play" id="submit" name="">
</form>
</div>

